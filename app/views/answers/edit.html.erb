<div class="row">
  <div class="col-sm-6">
    <h4>Het correcte antwoord is:</h4>
    <%= simple_format @question.answer %>

    <small class="text-muted">
      <% if @question.alerts.present? %>
        <span class="text-danger">
          We hebben een melding ontvangen dat dit antwoord niet klopt. Wij gaan dit z.s.m. rechtzetten.
        </span>
      <% else %>
        Klopt dit antwoord niet? Help ons door op deze knop te drukken. Wij een melding en verbeteren we z.s.m. het antwoord.
        <%= button_to "Foutief antwoord melden", [@question, :alerts], class: 'btn btn-sm btn-default' %>
      <% end %>
    </small>
  </div>

  <div class="col-sm-6">
    <h4>Jouw antwoord is:</h4>
    <%= simple_format @answer.input %>
    <p class="text-muted"><%= "Je hebt niets ingevuld..." if @answer.input.empty? %></p>

    <%= simple_form_for @answer do |f| %>
      <%= f.input :correct, as: :hidden %>

      <% if @answer.input.empty? %>
        <button class="btn btn-warning" autofocus>Volgende vraag</button>
      <% else %>
        <button class="btn btn-danger" autofocus>Ik heb het fout</button>
        <button href="#" class="btn btn-success" id="correct_answer_button">Ik heb het goed</button>
      <% end %>
    <% end %>
  </div>
</div>

