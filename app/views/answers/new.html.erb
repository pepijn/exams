<%= form_for @answer do |f| %>
  <%= f.hidden_field :question_id %>

  <%= image_tag(@question.attachment.url(:default)) if @question.attachment.present? %>

  <table>
    <thead>
      <tr>
        <th>
          <%= simple_format @question.text %>
        </th>
      </tr>
    </thead>

    <% if @question.multiple_choice? %>
      <% @options.each do |option| %>
        <tr class="<%= 'correct' if option == @question.correct_option && params[:show] %> <%= 'active' if option == @options.last %>">
          <td>
            <label>
              <%= f.radio_button :option_id, option.id %>
              <%= option %>
            </label>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>
          <input type="text" name="answer[input]" placeholder="Antwoord" value="<%= @question.correct_option if params[:show] %>">
          <small class="muted">
            Laat het veld leeg als je het antwoord niet weet
          </small>
        </td>
      </tr>
    <% end%>
  </table>

  <div class="wide">
    <%= f.submit "Antwoord controleren" %>
  </div>
<% end %>

<p class="muted" style="text-align: right; margin-top: 10px">
  Vraag <strong><%= @question.number %></strong> uit tentamen <strong><%= l @question.exam.date, format: :long %></strong>
</p>


