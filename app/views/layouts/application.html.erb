      mode: 'support',
      primary_color: '#0052cc',
      link_color: '#007dbf',
      tab_label: 'Feedback en ondersteuning',
      tab_color: '#cc6d00',
      tab_position: 'middle-right',
      tab_inverted: false
    }]);
    </script>

    <div class="container">
      <div id="header">
        <% if current_user %>
          <span style="float: right">
            <%= link_to "#{current_user.remaining_credits} credits", new_order_path %>
          </span>

          <p>
            <strong><%= current_user.email.split('@').first %></strong> /

            <% if session[:questions].empty? %>
              <%= link_to @course, :courses %>
            <% else %>
              <%= link_to @course, :session, method: :delete, data: { confirm: "Deze leersessie wordt beeindigd" }%>
            <% end %>

          </p>
        <% else %>
          <%= link_to "Home", root_url %>
        <% end %>
      </div>

      <% flash.each do |key, msg| %>
        <%= content_tag :p, raw(msg), class: ['flash', key] %>
      <% end %>

      <%= yield %>

      <div id="footer">
        <% if current_user %>
          <%= link_to "Uitloggen", destroy_user_session_path, method: :delete %>
