doctype html
html lang="nl"
  head
    title
      - if current_session
        = "[#{(current_session.completion * 100).to_i}%] "
      | Plict Tentamens
    meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"

    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  body
    .container
      br
      nav.navbar.navbar-default.navbar-fixed-top
        .container
          .navbar-header
            button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand href="/" Plict Tentamens
          .collapse.navbar-collapse
            - if current_user
              ul.nav.navbar-nav
                li
                  = link_to @course, :courses if @course
                li
                  = link_to new_order_path  do
                    span.badge>
                      = current_user.remaining_credits
                    | credits
              ul.nav.navbar-nav.navbar-right
                li
                  a.dropdown-toggle href="#" data-toggle="dropdown"
                    = current_user
                    b.caret<
                  ul.dropdown-menu.pull-right
                    li = link_to "Uitloggen", destroy_user_session_path, method: :delete

      - flash.select { |k,_| %w(notice success error alert).include? k.to_s }.each do |key, value|
        div.fade.in class=flash_class(key)
          a.close(href="#" data-dismiss="alert") &times;
          = value

      = yield

